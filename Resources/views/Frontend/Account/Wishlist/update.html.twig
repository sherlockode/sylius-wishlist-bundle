{% extends '@SyliusShop/Account/layout.html.twig' %}

{% form_theme form '@SyliusUi/Form/theme.html.twig' %}

{% block breadcrumb %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <a href="{{ path('sylius_shop_account_dashboard') }}" class="section">{{ 'sylius.ui.my_account'|trans }}</a>
        <div class="divider"> / </div>
        <a href="{{ path('sherlockode_account_wishlist_index') }}" class="section">{{ 'sherlockode_wishlist.account.index.header'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">{{ 'sherlockode_wishlist.account.update.header'|trans }}</div>
    </div>
{% endblock %}

{% block subcontent %}
    <div class="ui segment">
        {{ form_start(form, {'action': path('sherlockode_account_wishlist_update', {id: wishlist.id}), 'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate'}}) }}

        <h1 class="ui dividing header">
            {{ 'sherlockode_wishlist.account.update.header'|trans }}
            <div class="sub header">{{ 'sherlockode_wishlist.account.update.subheader'|trans }}</div>
        </h1>

        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <button type="submit" class="ui large primary button">{{ 'sylius.ui.save_changes'|trans }}</button>
        {{ form_end(form, {'render_rest': false}) }}

    </div>
{% endblock %}
